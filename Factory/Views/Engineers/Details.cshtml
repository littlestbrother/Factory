@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;

<h2>@Html.DisplayFor(model => model.Name) (engineer) details</h2>
<hr/>
@if(@Model.JoinEntities.Count == 0)
{
  <p>this engineer does not maintain any machines.</p>
}
else
{
  <h4>machines mantained:</h4>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Machine.Name</li>
  }
}
<hr/>
<p>@Html.ActionLink("edit", "Edit", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("delete", "Delete", new { id = Model.EngineerId })</p>